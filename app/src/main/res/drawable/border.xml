<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#88cccccc" /> <!--background color -->
        </shape>
    </item>

    <item
        android:top="-3dp"
        android:right="-3dp"
        android:left="-3dp">
        <shape>
            <solid android:color="#88cccccc" />
            <stroke
                android:width="2dp"
                android:color="#000" />
            <!-- color and size of the border -->
        </shape>
    </item>
</layer-list>